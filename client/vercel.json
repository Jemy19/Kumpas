{
  "rewrites": [
    { "source": "/latest/meta-data/", "destination": "/404" }, 
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' https://ekumpas.vercel.app https://kumpas.onrender.com https://vercel.live https://prod.spline.design 'unsafe-eval'; connect-src 'self' https://kumpas.onrender.com https://prod.spline.design; img-src 'self' https://kumpas.onrender.com data:; style-src 'self' 'unsafe-inline' https://ekumpas.vercel.app; frame-src 'self' https://kumpas.onrender.com; media-src 'self' https://kumpas.onrender.com; object-src 'none'; base-uri 'self';"
        }
      ]
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "query",
          "key": "authorized"
        }
      ],
      "headers": [
        {
          "key": "x-authorized",
          "value": "true"
        }
      ]
    }
  ]
}
